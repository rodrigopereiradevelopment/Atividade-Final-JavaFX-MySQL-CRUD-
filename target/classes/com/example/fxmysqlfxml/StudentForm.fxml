<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/17.0.12" fx:controller="com.example.fxmysqlfxml.StudentFormController">

    <center>
        <GridPane hgap="8" vgap="8">
            <padding>
                <Insets bottom="12" left="12" right="12" top="12" />
            </padding>

            <columnConstraints>
                <ColumnConstraints prefWidth="80" />
                <ColumnConstraints prefWidth="260" />
            </columnConstraints>

            <Label text="ID:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
            <TextField fx:id="txtId" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="0" />

            <Label text="Nome:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
            <TextField fx:id="txtNome" promptText="Nome" GridPane.columnIndex="1" GridPane.rowIndex="1" />

            <Label text="E-mail:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
            <TextField fx:id="txtEmail" promptText="email@exemplo.com" GridPane.columnIndex="1" GridPane.rowIndex="2" />
         <Label layoutX="22.0" layoutY="92.0" text="Sala:" GridPane.rowIndex="3" />
         <TextField fx:id="txtSala" layoutX="110.0" layoutY="88.0" promptText="A1" GridPane.columnIndex="1" GridPane.rowIndex="3" />
         <Label layoutX="22.0" layoutY="125.0" text="Modulo:" GridPane.rowIndex="4" />
         <TextField fx:id="txtModulo" layoutX="110.0" layoutY="121.0" promptText="1" GridPane.columnIndex="1" GridPane.rowIndex="4" />
         <Label layoutX="22.0" layoutY="158.0" text="Curso:" GridPane.rowIndex="5" />
         <TextField fx:id="txtCurso" layoutX="110.0" layoutY="154.0" promptText="Desenvolvimento de Exemplos" GridPane.columnIndex="1" GridPane.rowIndex="5" />
         <rowConstraints>
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
         </rowConstraints>
        </GridPane>
    </center>

    <bottom>
        <HBox spacing="8">
            <padding>
                <Insets bottom="8" left="8" right="8" top="8" />
            </padding>
            <Button onAction="#sSalvar" text="Salvar" />
            <Button onAction="#sCancelar" text="Cancelar" />
        </HBox>
    </bottom>

</BorderPane>
