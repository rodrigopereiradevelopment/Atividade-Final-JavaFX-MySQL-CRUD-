<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/17.0.12" fx:controller="com.example.fxmysqlfxml.StudentFormController">

    <center>
        <GridPane hgap="8" vgap="8">
            <padding>
                <Insets bottom="12" left="12" right="12" top="12" />
            </padding>

            <columnConstraints>
                <ColumnConstraints prefWidth="120.0" />
                <ColumnConstraints prefWidth="260.0" />
            </columnConstraints>

            <rowConstraints>
                <RowConstraints valignment="CENTER" vgrow="SOMETIMES" />
                <RowConstraints valignment="CENTER" vgrow="SOMETIMES" />
                <RowConstraints valignment="CENTER" vgrow="SOMETIMES" />
                <RowConstraints valignment="CENTER" vgrow="SOMETIMES" />
                <RowConstraints valignment="CENTER" vgrow="SOMETIMES" />
                <RowConstraints valignment="CENTER" vgrow="SOMETIMES" />
                <RowConstraints valignment="CENTER" vgrow="SOMETIMES" />
            </rowConstraints>

            <Label text="ID:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
            <TextField fx:id="txtId" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="0" />

            <Label text="Nome:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
            <TextField fx:id="txtName" promptText="Nome do Aluno" GridPane.columnIndex="1" GridPane.rowIndex="1" />

            <Label text="E-mail:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
            <TextField fx:id="txtEmail" promptText="email@exemplo.com" GridPane.columnIndex="1" GridPane.rowIndex="2" />

            <Label text="Dt. Nascimento:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
            <DatePicker fx:id="dpBirthDate" GridPane.columnIndex="1" GridPane.rowIndex="3" promptText="AAAA-MM-DD" />

            <Label text="Telefone:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
            <TextField fx:id="txtPhone" promptText="(xx) xxxxx-xxxx" GridPane.columnIndex="1" GridPane.rowIndex="4" />

            <Label text="Situação:" GridPane.columnIndex="0" GridPane.rowIndex="5" />
            <CheckBox fx:id="cbActive" text="Ativo" selected="true" GridPane.columnIndex="1" GridPane.rowIndex="5" />

        </GridPane>
    </center>

    <bottom>
        <HBox alignment="CENTER_RIGHT" spacing="8">
            <padding>
                <Insets bottom="8" left="8" right="8" top="8" />
            </padding>
            <Button onAction="#handleSalvar" text="Salvar" />
            <Button onAction="#handleCancelar" text="Cancelar" />
        </HBox>
    </bottom>

</BorderPane>